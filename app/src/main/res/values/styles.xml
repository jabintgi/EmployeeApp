<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>m
    </style>

    <style name="loginTheme" parent="AppTheme">
        <item name="android:colorControlNormal">@color/text_light</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="colorAccent">@color/text</item>
    </style>

</resources>